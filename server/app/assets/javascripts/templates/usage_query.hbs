<div class="row">

  <div class="usage-control span12">

    <form class="form-inline ">
        <label class="control-label" for="inputCluster">Cluster:</label>
        {{view Ember.Select classNames="span2"
                            contentBinding="clusters"
                            disabledBinding="isInProgress"
                            optionLabelPath="content.name"
                            optionValuePath="content.name"
                            valueBinding="selectedCluster"}}

        <label class="control-label" for="inputUnit">Granularity:</label>
        {{view Ember.Select classNames="span2"
                            contentBinding="view.units"
                            disabledBinding="isInProgress"
                            optionLabelPath="content.label"
                            optionValuePath="content.value"
                            valueBinding="selectedUnit"}}
        
        <label class="control-label" for="inputType">Metric:</label>
        {{view Ember.Select classNames="span2 types"
                            contentBinding="view.types"
                            disabledBinding="isInProgress"
                            optionLabelPath="content.label"
                            optionValuePath="content.value"
                            valueBinding="selectedType"}}

        <label class="control-label" for="inputType">Time zone:</label>
        {{view Ember.Select classNames="span3"
                            contentBinding="timeZones"
                            disabledBinding="isInProgress"
                            optionLabelPath="content.name"
                            optionValuePath="content.name"
                            valueBinding="selectedZone"}}
    </form>

    <form class="form-inline">
      <label class="control-label" for="inputCluster">Users:</label>

      <select class="users span5" multiple="multiple">
      </select>

      <label class="checkbox" class="show-total">
        {{view Ember.Checkbox classNames="show-total" 
                              checkedBinding="aggregateSelectedChecked" 
                              disabledBinding="isInProgress"}}
        Aggregate selected
      </label>

      <label class="control-label" for="inputCluster">Last</label>
      {{view Ember.TextField classNames="span1" valueBinding="durationValue"}}
      {{view Ember.Select classNames="span2"
                            contentBinding="durationUnits"
                            disabledBinding="isInProgress"
                            optionLabelPath="content.name"
                            optionValuePath="content.name"
                            valueBinding="durationUnit"}}
    </form>
    

  </div>

</div>